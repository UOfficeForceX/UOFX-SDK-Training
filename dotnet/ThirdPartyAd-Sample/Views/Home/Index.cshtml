@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4" style="margin-top: 32px">模擬自訂登入驗證</h1>
    <br />

    <form action="/Home/Login" method="post" style="display: flex; flex-direction: column; align-items: center;">
        <div class="form-group" style="width: 200px; margin:8px">
            <input type="text" class="form-control" id="username" name="username" placeholder="輸入帳號" style="width: 100%;">
        </div>
        <div class="form-group" style="width: 200px; margin:8px">
            <input type="password" class="form-control" id="password" name="password" placeholder="輸入密碼" style="width: 100%;">
        </div>
        <button type="submit" class="btn btn-primary" style="width: 200px; margin:8px">登入</button>
    </form>
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.ErrorMessage
        </div>
    }
</div>
